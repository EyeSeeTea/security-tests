            "friendlyName": "Build ZIP",
            "compression": "none",
            "maxSize": "5 MB",
            "maxPercentIncrease": 25
        },
        {
            "path": "./build/**/*",
            "friendlyName": "Build Folder Files",
            "compression": "gzip"
        }
    ],
    "groups": [
        {
            "path": "./build/**/*",
            "friendlyName": "Build Folder",
            "compression": "gzip",
            "maxSize": "5 MB",
            "maxPercentIncrease": 25
        }
    ],
    "reportOutput": [
        [
            "github",
            {
                "checkRun": true,
                "commitStatus": true,
                "prComment": true
            }
        ]
    ]
}
